    #         season = sys.argv[2]
    #         functions.rename_season(desired_name, season)
    #     else: 
    #         desired_name = sys.argv[1]
    #         functions.rename(desired_name) 
        
    # except:
    #     print("Please enter a second argument for the name!")
    #     sys.exit()


if __name__ == "__main__":
    main()
